{
    "templates":{
        "!Dir":{
            "$ref": "{{_Dir}}",
            "method":{
                "name": "join_Dir",
                "kwargs":{
                    "path": "Templates"
                }
            }
        }
    },
    "profiles":{
        "!Dir":{
            "$ref": "{{package.config.cache.Dir}}",
            "method":{
                "name": "join_Dir",
                "kwargs":{
                    "path": "profiles"
                }
            }
        }
    },
    "profile":{
        "!Path":{
            "$ref": "{{profiles.Dir}}",
            "method":{
                "name": "join_Path",
                "kwargs":{
                    "path": "{{user_to_load}}.json"
                }
            }
        }
    }
}